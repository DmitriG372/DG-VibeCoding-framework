{
  "version": "4.0.0",
  "name": "DG-VibeCoding-Framework",
  "description": "Universal framework for CC + CX equal partnership development",

  "core": {
    "skills": [
      "sub-agent",
      "debugging",
      "testing",
      "git",
      "vibecoding",
      "partnership"
    ],
    "commands": [
      "feature",
      "done",
      "review",
      "fix",
      "orchestrate",
      "peer-review",
      "handoff",
      "sync-tasks",
      "framework-update"
    ],
    "agents": [
      "orchestrator",
      "implementer",
      "reviewer",
      "tester",
      "debugger"
    ]
  },

  "paths": {
    "skills": ".claude/skills/*/SKILL.md",
    "commands": ".claude/commands/*.md",
    "agents": ".claude/agents/*.md",
    "hooks": "hooks/*.js",
    "hooks_session": "hooks/git-context.js",
    "tasks": ".tasks/board.md",
    "codex_config": "AGENTS.md"
  },

  "agents": {
    "cc": { "config": "CLAUDE.md", "branch_prefix": "feat/" },
    "cx": { "config": "AGENTS.md", "branch_prefix": "cx/" }
  },

  "integrations": {
    "codex": {
      "cli": true,
      "equal_partner": true
    }
  },

  "update_sources": [
    "https://docs.anthropic.com/en/docs/claude-code",
    "https://developers.openai.com/codex/changelog/"
  ]
}
