{
  "version": "3.1.0",
  "name": "DG-VibeCoding-Framework",
  "description": "Universal Claude Code framework with Codex integration and Spec-Factory workflow",

  "core": {
    "skills": [
      "sub-agent",
      "debugging",
      "testing",
      "git",
      "vibecoding",
      "codex",
      "spec-factory"
    ],
    "commands": [
      "feature",
      "done",
      "review",
      "fix",
      "orchestrate",
      "codex-review",
      "framework-update",
      "spec"
    ],
    "agents": [
      "orchestrator",
      "implementer",
      "reviewer",
      "tester",
      "debugger"
    ]
  },

  "paths": {
    "skills": ".claude/skills/*/SKILL.md",
    "commands": ".claude/commands/*.md",
    "agents": ".claude/agents/*.md",
    "hooks": "hooks/*.js"
  },

  "integrations": {
    "codex": {
      "cli": true,
      "cloud": false,
      "github_action": false
    }
  },

  "update_sources": [
    "https://docs.anthropic.com/en/docs/claude-code",
    "https://developers.openai.com/codex/changelog/"
  ]
}
